%% -*- mode: Erlang; fill-column: 80; comment-column: 75; -*-
{paths, ["deps"]}.
{vm_args, "./config/vm.args"}.
{sys_config, "app.config"}.
{include_erts, true}.
{extended_start_script, true}.
{include_src, false}.
{release, {rkn_registry, "0.6"},
 [rkn_registry,
 {sasl, "2.4", '>='},
 {erlsom, load},
 {ibrowse, load},
 {xmerl, "1.3.0", '>='},
 {yaws, load},
 {lager, load}]}.

{overlay,
[{mkdir , "priv/arch"},
 {mkdir , "priv/logs"},
 {mkdir , "priv/logs/www"},
 {mkdir , "include"},
 {copy , "priv/request.xml", "priv/request.xml"},
 {copy , "priv/request.bin", "priv/request.bin"},
 {copy , "include/registry.hrl", "include/registry.hrl"},
 {copy, "www/", ""}
]}.
